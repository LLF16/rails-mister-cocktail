<div class="container">
<h1><%= @cocktail.name %></h1>
<p>List of ingredients</p>
<ul>
<% @cocktail.doses.each do |dose| %>
<li>
  <%= dose.description %>
  <%= dose.ingredient[:name] %>
  <%= link_to 'Delete ingredient', dose_path(dose), method: :delete  %>
</li>
<% end %>
</ul>
<%= link_to 'Add a new ingredient', new_cocktail_dose_path(@cocktail)  %>
<br>
<%= link_to 'Back to list', cocktails_path  %>
</div>
